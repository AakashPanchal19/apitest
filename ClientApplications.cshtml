@model List<BOBDrive.ViewModels.Admin.ClientApplicationViewModel>
@{
    ViewBag.Title = "Client Applications";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2><i class="glyphicon glyphicon-cog"></i> Client Applications</h2>
<hr />

<p>
    <a href="@Url.Action("Index", "AdminDashboard")" class="btn btn-default">
        <i class="glyphicon glyphicon-arrow-left"></i> Back to Dashboard
    </a>
    <a href="@Url.Action("GenerateKey", "Admin")" class="btn btn-primary">
        <i class="glyphicon glyphicon-plus"></i> Generate New API Key
    </a>
</p>

<div class="panel panel-default">
    <div class="panel-heading">
        <h3 class="panel-title">Registered Applications (@Model.Count)</h3>
    </div>
    <div class="panel-body">
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Application Name</th>
                        <th>API ID</th>
                        <th>Application URL</th>
                        <th>Server Address</th>
                        <th>Created By</th>
                        <th>Created At</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var app in Model)
                    {
                        <tr>
                            <td>@app.ApplicationName</td>
                            <td><code>@app.ApiId</code></td>
                            <td><a href="@app.ApplicationUrl" target="_blank">@app.ApplicationUrl</a></td>
                            <td>@(app.ServerAddress ?? "N/A")</td>
                            <td>@app.CreatedByUserFullName</td>
                            <td>@app.CreatedAt.ToString("yyyy-MM-dd HH:mm")</td>
                            <td>
                                <button class="btn btn-sm btn-danger delete-app-btn"
                                        data-app-id="@app.Id"
                                        data-app-name="@app.ApplicationName">
                                    <i class="glyphicon glyphicon-trash"></i> Delete
                                </button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script type="text/javascript">
        $(document).ready(function() {
            $('.delete-app-btn').on('click', function() {
                var appId = $(this).data('app-id');
                var appName = $(this).data('app-name');

                if (!confirm('Are you sure you want to delete "' + appName + '"?\n\nThis action cannot be undone.')) {
                    return;
                }

                var $btn = $(this);
                $btn.prop('disabled', true);

                $.ajax({
                    url: '@Url.Action("DeleteClientApp", "AdminDashboard")',
                    type: 'POST',
                    data: {
                        __RequestVerificationToken: $('input[name="__RequestVerificationToken"]').val(),
                        id: appId
                    },
                    success: function(response) {
                        if (response.success) {
                            $btn.closest('tr').fadeOut(400, function() {
                                $(this).remove();
                            });
                            alert(response.message);
                        } else {
                            alert('Error: ' + response.message);
                            $btn.prop('disabled', false);
                        }
                    },
                    error: function() {
                        alert('Server error occurred while deleting the application.');
                        $btn.prop('disabled', false);
                    }
                });
            });
        });
    </script>
}