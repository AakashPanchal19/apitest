@model BOBDrive.ViewModels.Admin.ClientApplicationCreateViewModel
@{
    ViewBag.Title = "Generate API Key";
}

<h2>Generate New API Key for a Client Application</h2>
<hr />

<div class="row">
    <div class="col-md-8">
        <section id="generateKeyForm">
            @using (Html.BeginForm("GenerateKey", "Admin", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
                <h4>Fill out the details of the application that will be integrating with BOBDrive.</h4>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="form-group">
                    @Html.LabelFor(m => m.ApplicationName, new { @class = "col-md-3 control-label" })
                    <div class="col-md-9">
                        @Html.TextBoxFor(m => m.ApplicationName, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.ApplicationName, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.ApplicationUrl, new { @class = "col-md-3 control-label" })
                    <div class="col-md-9">
                        @Html.TextBoxFor(m => m.ApplicationUrl, new { @class = "form-control", type = "url" })
                        @Html.ValidationMessageFor(m => m.ApplicationUrl, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.ServerAddress, new { @class = "col-md-3 control-label" })
                    <div class="col-md-9">
                        @Html.TextBoxFor(m => m.ServerAddress, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.ServerAddress, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-3 col-md-9">
                        <input type="submit" value="Generate Key" class="btn btn-primary" />
                    </div>
                </div>
            }
        </section>
    </div>
</div>